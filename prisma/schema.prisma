// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"

  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_PRISMA_URL_NON_POOLING") // uses a direct connection
}

model Occasion {
  id Int @id @default(autoincrement())

  name         String
  description  String?
  currency     Currency      @default(EURO)
  category     String
  participants Participant[]
  expenses     Expense[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Currency {
  EURO
  DOLLAR
}

model Participant {
  id                 Int                @id @default(autoincrement())
  name               String
  participiantShares ParticipantShare[]

  occasion   Occasion @relation(fields: [occasionId], references: [id])
  occasionId Int
}

model Expense {
  id Int @id @default(autoincrement())

  title            String
  amount           Int
  participantShare ParticipantShare[]

  occasion   Occasion @relation(fields: [occasionId], references: [id])
  occasionId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ParticipantShare {
  id     Int @id @default(autoincrement())
  amount Int

  participant   Participant @relation(fields: [participantId], references: [id])
  participantId Int

  expense   Expense @relation(fields: [expenseId], references: [id])
  expenseId Int
}
